<.header>
  Group <%= @group.id %>
  <:subtitle>This is a group record from your database.</:subtitle>
  <:actions>
    <.link patch={~p"/synthetic-groups/#{@group}/show/edit"} phx-click={JS.push_focus()}>
      <.button>Edit group</.button>
    </.link>
  </:actions>
</.header>

<.list>
  <:item title="Name"><%= @group.name %></:item>
  <:item title="Description"><%= @group.description %></:item>
</.list>

<.back navigate={~p"/synthetic-groups"}>Back to groups</.back>

<.modal
  :if={@live_action == :edit}
  id="group-modal"
  show
  on_cancel={JS.patch(~p"/synthetic-groups/#{@group}")}
>
  <.live_component
    module={SyntheticManagerWeb.SyntheticGroupLive.FormComponent}
    id={@group.id}
    title={@page_title}
    action={@live_action}
    group={@group}
    patch={~p"/synthetic-groups/#{@group}"}
  />
</.modal>
